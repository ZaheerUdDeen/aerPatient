<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/imagelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/customborder">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/blue"
            android:text="Consultation-ID:"
            android:textSize="25dp"

            tools:backgroundTint="@color/blue" />
        <TextView
            android:id="@+id/consultationIDMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:hint="Consultation Id"
            android:textSize="25dp"
            android:textColor="@color/blue"

            />
        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/consultationIDMC"
            android:text="Illness Description:"
            android:backgroundTint="@color/blue"
            android:textSize="25dp"
             />
        <TextView
            android:textColor="@color/blue"

            android:id="@+id/IllnesDecription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/consultationIDMC"
            android:hint="Illness Description"
            android:textSize="25dp"
             />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/IllnesDecription"
            android:text="Message:"
            android:backgroundTint="@color/blue"
            android:textSize="25dp"
           />
        <TextView
            android:textColor="@color/blue"

            android:id="@+id/messageInC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/IllnesDecription"
            android:hint="Message"
            android:textSize="25dp"

            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/messageInC"
            android:textSize="25dp"

            android:backgroundTint="@color/blue"

            android:layout_marginTop="5dp"
            android:text="Treatment Procedure:"
            />

        <TextView
            android:id="@+id/procedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/messageInC"
            android:layout_marginTop="30dp"
            android:hint="Procedure :"
            android:textSize="20dp"
            android:textColor="@color/blue"
            />

        <ImageView
            android:id="@+id/cStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/checkbox_on_background" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>